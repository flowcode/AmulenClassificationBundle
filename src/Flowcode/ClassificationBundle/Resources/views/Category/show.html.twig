{% extends 'FlowcodeDashboardBundle:Default:layout.html.twig' %}

{% block body -%}
    <section class="content">
        <div class="box box-solid">
            <div class="box-header">
                <h3>{{ "Create category"|trans|title }}</h3>
                <div class="box-tools">
                    <a href="{{ path('admin_category') }}" class="btn btn-link">
                        {{ "List"|trans }}
                    </a>
                    <a href="{{ path('admin_category_edit', { 'id': entity.id }) }}" class="btn btn-link">
                        {{ "Edit"|trans }}
                    </a>
                </div>
            </div>
            <div class="box-body">

                <table class="table">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ entity.name }}</td>
                    </tr>
                    <tr>
                        <th>Slug</th>
                        <td>{{ entity.slug }}</td>
                    </tr>
                    <tr>
                        <th>Parent</th>
                        <td>{{ entity.parent }}</td>
                    </tr>
                    </tbody>
                </table>

            </div>
        </div>
    </section>
{% endblock %}
